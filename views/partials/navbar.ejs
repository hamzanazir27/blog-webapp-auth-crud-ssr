<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
  <div class="container">
    <a class="navbar-brand fw-bold fs-3" href="/" style="color: #ffc107">
      <i class="fas fa-blog"></i> BlogNest
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/">
            <i class="fas fa-home"></i> Home
          </a>
        </li>
        <% if(locals.user){ %>
        <li class="nav-item">
          <a class="nav-link" href="/blog/add-new">
            <i class="fas fa-plus-circle"></i> Add Blog
          </a>
        </li>
        <% } %>
      </ul>

      <% if(locals.user){ %>
      <div class="dropdown">
        <a
          class="btn btn-outline-light dropdown-toggle"
          href="#"
          role="button"
          data-bs-toggle="dropdown"
          aria-expanded="false"
        >
          <i class="fas fa-user-circle"></i> Welcome, <%= user.fullName %>
        </a>
        <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark">
          <li>
            <a class="dropdown-item" href="/user/logout">
              <i class="fas fa-sign-out-alt"></i> Logout
            </a>
          </li>
        </ul>
      </div>
      <% } else { %>
      <div class="d-flex gap-2">
        <a href="/user/signup" class="btn btn-outline-warning">
          <i class="fas fa-user-plus"></i> Sign Up
        </a>
        <a href="/user/signin" class="btn btn-warning">
          <i class="fas fa-sign-in-alt"></i> Sign In
        </a>
      </div>
      <% } %>
    </div>
  </div>
</nav>

<%if(locals.error){ %>
<div class="container mt-3">
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <i class="fas fa-exclamation-triangle"></i> <%= locals.error%>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
</div>
<%} %>
